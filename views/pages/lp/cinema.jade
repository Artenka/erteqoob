extends ../../layouts/main-lp.jade

block contents
  div.main-layout#man-innovations
    include ../../partials/lp/page-scroll-cinema.jade

    div.scroll-layout
      include ../../pages-partials/cinema/sp-about.jade
      include ../../pages-partials/cinema/sp-foundation.jade
      include ../../pages-partials/cinema/sp-philosophy.jade
      include ../../pages-partials/cinema/cinema-about-1.jade
      include ../../pages-partials/cinema/cinema-about-2.jade
      include ../../pages-partials/cinema/cinema-about-3.jade
      include ../../pages-partials/cinema/cinema-about-4.jade
      include ../../pages-partials/cinema/cinema-about-5.jade

      include ../../partials/lp/footer.jade
      include ../../partials/popups/popup-cinema-video.jade

  script.
    $(function(){
      philosophyAbout1Init();
      philosophyAbout2Init();
      philosophyPros1Init();
    });

    function philosophyAbout1Init() {
      TweenMax.to($(".philosophy-about--1 .philosophy-about__number"), 1, {
        top: '0',
        opacity: '1',
        ease: Power1.easeInOut,
        delay: 0.3
      });
      TweenMax.to($(".philosophy-about--1 .philosophy-about__title"), 1, {
        top: '0',
        opacity: '1',
        ease: Power1.easeInOut,
        delay: 0.3
      });
      TweenMax.to($(".philosophy-about--1 .philosophy-about__text"), 1, {
        top: '0',
        opacity: '1',
        ease: Power1.easeInOut,
        delay: 0.5
      });
      TweenMax.to($(".philosophy-about--1 .philosophy-about__line-layout"), 1, {
        padding: '0',
        ease: Power1.easeInOut,
        delay: 0.7
      });

      philosophyAbout1Reinit = false;
    }

    function philosophyAbout2Init() {
      TweenMax.to($(".philosophy-about--2 .philosophy-about__number"), 1, {
        top: '0',
        opacity: '1',
        ease: Power1.easeInOut,
        delay: 0.3
      });
      TweenMax.to($(".philosophy-about--2 .philosophy-about__title"), 1, {
        top: '0',
        opacity: '1',
        ease: Power1.easeInOut,
        delay: 0.3
      });
      TweenMax.to($(".philosophy-about--2 .philosophy-about__text"), 1, {
        top: '0',
        opacity: '1',
        ease: Power1.easeInOut,
        delay: 0.5
      });
      TweenMax.to($(".philosophy-about--2 .philosophy-about__line-layout"), 1, {
        padding: '0',
        ease: Power1.easeInOut,
        delay: 0.7
      });

      philosophyAbout2Reinit = false;
    }

    function philosophyPros1Init() {
      TweenMax.to($(".philosophy-pros--1 .home-pros__title--1"), 1, {
        top: '0',
        opacity: '1',
        ease: Power1.easeInOut,
        delay: 0.3
      });
      TweenMax.staggerTo($(".philosophy-pros--1 .philosophy-pros-list__item-text"), 1, {
        top: '0',
        opacity: '1',
        ease: Power1.easeInOut,
        delay: 0.5
      }, 0.1);
      TweenMax.staggerTo($(".philosophy-pros--1 .philosophy-pros-list__item-line-left-layout"), 1, {
        padding: '0',
        ease: Power1.easeInOut,
        delay: 0.6
      }, 0.1);
      TweenMax.to($(".philosophy-pros--1 .home-pros__title--2"), 1, {
        top: '0',
        opacity: '1',
        ease: Power1.easeInOut,
        delay: 1
      });

      philosophyPros1Reinit = false;
    }