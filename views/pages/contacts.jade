  script.
    $(function () {
      $('#client-page').css('overflow', 'hidden');

      // contacts init animations
      fixedMenusInitAnimation();
      TweenMax.to($('.main-layout > .link-back'), 1, {opacity: 1, ease: Power1.easeOut, delay: 0.7});
      TweenMax.to($('#contacts'), 1.2, {opacity: 1, ease: Power1.easeOut, delay: 0.2});

      // contacts side hover
      $(".contacts-side-dummy").hover(
        function () {
          if($(this).hasClass('contacts-side-dummy--kiev')){
            $('.contacts-side--kiev').addClass("contacts-side--active");
            $('.contacts-center').addClass("contacts-center--kiev");
            $('.contacts-coordinates__header--kiev').addClass("contacts-coordinates__header--active");
            $('.contacts-coordinates__footer--kiev').addClass("contacts-coordinates__footer--active");
          } else {
            $('.contacts-side--kharkiv').addClass("contacts-side--active");
            $('.contacts-center').addClass("contacts-center--kharkiv");
            $('.contacts-coordinates__header--kiev').removeClass("contacts-coordinates__header--active");
            $('.contacts-coordinates__footer--kiev').removeClass("contacts-coordinates__footer--active");
            $('.contacts-coordinates__header--kharkiv').addClass("contacts-coordinates__header--active");
            $('.contacts-coordinates__footer--kharkiv').addClass("contacts-coordinates__footer--active");
          }
          $('.contacts-side').not('.contacts-side--active').addClass("contacts-side--disable");
          $('.contacts-center').addClass("contacts-center--active");
        },
        function () {
          $('.contacts-side').removeClass("contacts-side--active contacts-side--disable");
          $('.contacts-center').removeClass("contacts-center--active contacts-center--kiev contacts-center--kharkiv");
          $('.contacts-coordinates__header--kharkiv').removeClass("contacts-coordinates__header--active");
          $('.contacts-coordinates__footer--kharkiv').removeClass("contacts-coordinates__footer--active");
          $('.contacts-coordinates__footer--kiev').addClass("contacts-coordinates__footer--active");
          $('.contacts-coordinates__header--kiev').addClass("contacts-coordinates__header--active");
        }
      );

      // contacts side click
      $(".contacts-side-dummy").click( function () {
        if(!$('.contacts-side').hasClass("contacts-side--clicked")){

          if ($(this).hasClass('contacts-side-dummy--kiev')) {
            $('.contacts-side--kiev').addClass("contacts-side--clicked");
            $('.contacts-side--kharkiv').addClass("contacts-side--disabled");
            $('.contacts-info--kiev').addClass('contacts-info--active');
            $('.contacts-info__inner-link--kiev').addClass('contacts-info__inner-link--active');
            $('.contacts-slider--kiev').addClass('contacts-slider--active');
          } else {
            $('.contacts-side--kharkiv').addClass("contacts-side--clicked");
            $('.contacts-side--kiev').addClass("contacts-side--disabled");
            $('.contacts-info--kharkiv').addClass('contacts-info--active');
            $('.contacts-info__inner-link--kharkiv').addClass('contacts-info__inner-link--active');
            $('.contacts-slider--kharkiv').addClass('contacts-slider--active');
          }
          $('.contacts-side').not('.contacts-side--clicked').addClass("contacts-side--hidden");
          $('.contacts-center').addClass("contacts-center--disabled");
          $('.contacts-coordinates').addClass("contacts-coordinates--disabled");
          $('.contacts-title-block').addClass("contacts-title-block--disabled");
          $('.contacts-info__exit').addClass('contacts-info__exit--active');

        }
      });

      // contacts side exit click
      $(".contacts-info__exit").click( function () {
        $('.contacts-side').removeClass("contacts-side--clicked contacts-side--disabled contacts-side--hidden");
        $('.contacts-info').removeClass('contacts-info--active');
        $('.contacts-center').removeClass("contacts-center--disabled");
        $('.contacts-coordinates').removeClass("contacts-coordinates--disabled");
        $('.contacts-title-block').removeClass("contacts-title-block--disabled");
        $('.contacts-info__exit').removeClass('contacts-info__exit--active');
        $('.contacts-info__inner-link').removeClass('contacts-info__inner-link--active');
        $('.contacts-slider').removeClass('contacts-slider--active');
      });


      // contacts slider
      $('.contacts-slider').slick({
        slidesToShow: 5,
        speed: 1000,
        mobileFirst: true,
        arrows: true,
        dots: false,
        draggable: true,
        accessibility: false,
        centerMode: true,
        variableWidth: true,
        adaptiveHeight: false,
        infinite: true,
        swipeToSlide: true
      });
    });