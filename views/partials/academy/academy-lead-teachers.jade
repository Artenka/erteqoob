script.
  $(function(){

    // lead teachers hover animation
    var $leadTeacher = $('.academy-lead-teachers__item');
    var inFinished = false;
    var outFinished = true;

    if ($(window).width() > 640) {
      $leadTeacher.on('mouseover', function () {
        var $this = $(this);
        //$leadTeacher.not(this).addClass('academy-lead-teachers__item--disabled');
        $this.removeClass('academy-lead-teachers__item--disabled');
        if (!inFinished && outFinished) {
          //smilesAnimationIn($this);
          inFinished = true;
          //if (!$this.is(':hover')) {
          //  smilesAnimationOut($this);
          //}
        } else if (inFinished && outFinished) {
          setTimeout(function () {
            //smilesAnimationIn($this);
            inFinished = true;
          }, 1500);
        }
      });

      $leadTeacher.on('mouseleave', function () {
        var $this = $(this);
        //$leadTeacher.not(this).removeClass('academy-lead-teachers__item--disabled');
        $this.addClass('academy-lead-teachers__item--disabled');
        if (inFinished && !outFinished) {
          //smilesAnimationOut($this);
          outFinished = true;
        } else if (inFinished && outFinished) {
          setTimeout(function () {
            //smilesAnimationOut($this);
            outFinished = true;
          }, 1500);
        }
      });
    }
  });


  function smilesAnimationIn($this){
    if ($this.hasClass('academy-lead-teachers__item--1')) {
      $this.find($('.academy-lead-teachers__item-bg')).attr('src', '/img/client/academy/academy-main-teacher-1-in.gif');
    } else if ($this.hasClass('academy-lead-teachers__item--2')) {
      $this.find($('.academy-lead-teachers__item-bg')).attr('src', '/img/client/academy/academy-main-teacher-2-in.gif');
    } else if ($this.hasClass('academy-lead-teachers__item--3')) {
      $this.find($('.academy-lead-teachers__item-bg')).attr('src', '/img/client/academy/academy-main-teacher-3-in.gif');
    } else if ($this.hasClass('academy-lead-teachers__item--4')) {
      $this.find($('.academy-lead-teachers__item-bg')).attr('src', '/img/client/academy/academy-main-teacher-4-in.gif');
    }
  }

  function smilesAnimationOut($this) {
    if ($this.hasClass('academy-lead-teachers__item--1')) {
      $this.find($('.academy-lead-teachers__item-bg')).attr('src', '/img/client/academy/academy-main-teacher-1-out.gif');
    } else if ($this.hasClass('academy-lead-teachers__item--2')) {
      $this.find($('.academy-lead-teachers__item-bg')).attr('src', '/img/client/academy/academy-main-teacher-2-out.gif');
    } else if ($this.hasClass('academy-lead-teachers__item--3')) {
      $this.find($('.academy-lead-teachers__item-bg')).attr('src', '/img/client/academy/academy-main-teacher-3-out.gif');
    } else if ($this.hasClass('academy-lead-teachers__item--4')) {
      $this.find($('.academy-lead-teachers__item-bg')).attr('src', '/img/client/academy/academy-main-teacher-4-out.gif');
    }
  }
