section.section-layout.home-action-layout
  div.home-action
    div.home-action__inner
      div.home-action__info
        h1.home-action__title Отличайся!
        h2.home-action__subtitle Черпай вдохновение<br> из новых коллекций и материалов
      form.home-action__form
        div.home-action__form-input-layout
          .home-action__form-input-line
          label.home-action__form-label Имя
          input.home-action__form-input(type="text")
        div.home-action__form-input-layout
          .home-action__form-input-line
          label.home-action__form-label E-mail
          input.home-action__form-input(type="text")
        div.home-action__form-submit-layout
          .arrow-link
            button(type="submit").btn-black.arrow-link__text.home-action__form-submit подписаться


script.
  $(function(){
    $('.home-action__form-input').focus(function () {
      TweenMax.to($(this).closest('.home-action__form-input-layout').find('.home-action__form-label'), 0.3, {top: '-16px', scaleX: 0.75, scaleY: 0.75, ease: Power1.easeInOut});
      $(this).closest('.home-action__form-input-layout').find('.home-action__form-input-line').addClass('home-action__form-input-line--active');
    });
    $('.home-action__form-input').blur(function () {
      TweenMax.to($(this).closest('.home-action__form-input-layout').find('.home-action__form-label'), 0.3, {top: '16px', scaleX: 1, scaleY: 1, ease: Power1.easeInOut});
      $(this).closest('.home-action__form-input-layout').find('.home-action__form-input-line').removeClass('home-action__form-input-line--active');
    });
  })