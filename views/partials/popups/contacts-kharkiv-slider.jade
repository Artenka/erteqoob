#contacts-kharkiv-slider-popup.popup-layout.popup-layout--black
  .photo-popup
    .popup__close

    //include ../../partials/popup-partials/academy-kharkiv-slider.jade

    ul.photo-popup-slider.academy-inspiration-popup__slider.academy-inspiration-popup__slider--kharkiv.academy-inspiration-popup__slider--active.slider-arrows-long.slider-arrows-long--edge.academy-inspiration-slider.academy-inspiration-slider--kharkiv
      each imagePath in contacts.kharkivGallery
        li.photo-popup-slide
          .photo-popup-slide-layout
            img(src="#{imagePath}")


  script.
    $(function () {
      $('.academy-inspiration-popup__slider--kharkiv').slick({
        slidesToShow: 1,
        arrows: true,
        dots: false,
        draggable: true,
        accessibility: false,
        centerMode: true,
        variableWidth: true,
        infinite: true,
        asNavFor: '.academy-inspiration__slider--kharkiv',
        swipeToSlide: true
      });
    });