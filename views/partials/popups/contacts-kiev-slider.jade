#contacts-kiev-slider-popup.popup-layout.popup-layout--black
  .photo-popup
    .popup__close

    //include ../../partials/popup-partials/academy-kiev-slider.jade
    ul.photo-popup-slider.academy-inspiration-popup__slider.academy-inspiration-popup__slider--kiev.academy-inspiration-popup__slider--active.slider-arrows-long.slider-arrows-long--edge.academy-inspiration-slider.academy-inspiration-slider--kiev
      each imagePath in contacts.kyivGallery
        li.photo-popup-slide
          .photo-popup-slide-layout
            img(src="#{imagePath}")


  script.
    $(function () {
      $('.academy-inspiration-popup__slider--kiev').slick({
        slidesToShow: 1,
        arrows: true,
        dots: false,
        draggable: true,
        accessibility: false,
        centerMode: true,
        variableWidth: true,
        infinite: true,
        asNavFor: '.academy-inspiration__slider--kiev',
        swipeToSlide: true
      });
    });