  $(function(){
    $('.sp-program-adaptation-day').click(function(){
      if(!$(this).hasClass('sp-program-adaptation-day--active')){
        $('.sp-program-adaptation-day--active').removeClass('sp-program-adaptation-day--active');
        $(this).addClass('sp-program-adaptation-day--active');
