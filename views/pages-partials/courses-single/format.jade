mixin block_format(index, city, item)
  section#format.section-layout.section.sp-format.sp-format--qualification.sp-format--adaptation.sp-format--man-innovations(style="background-image: url(#{item.bg})")
    div.page-title
      .page-title__logo
      h1!= item.title
      h2!= item.subtitle

    .sp-format-block-layout
      div.sp-format-block
        div.sp-format-block__left!= item.text_left
        div.sp-format-block__right!= item.text_right

    .sp-format-register
      if item.price
        .sp-format-register__price #{item.price}
      if item.prepayment
        p.sp-format-register__prepay #{item.prepayment}
      if item.discount
        p.sp-format-register__discount #{item.discount}
      if city === 'kiev'
        button(type="button" onclick="registerStep1('#{courses.path}_#{city}','#{courses.course_type} #{courses.name}', '#{courses.course_type} «#{courses.name}»', '#{city}', '#{item.date}', '#{courses.pages[0].grtoken}')").btn.sp-format-register__link записаться на курс
      else if city === 'kharkiv'
        button(type="button" onclick="registerStep1('#{courses.path}_#{city}','#{courses.course_type} #{courses.name}', '#{courses.course_type} «#{courses.name}»', '#{city}', '#{item.date}', '#{courses.pages[1].grtoken}')").btn.sp-format-register__link записаться на курс
