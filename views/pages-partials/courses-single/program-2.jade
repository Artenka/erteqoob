mixin block_program_2(index, city, item)
  section#program.section-layout.section.sp-program-adaptation.sp-program-adaptation--man-innovations(style="background-image: url(#{item.bg})")
    div.page-title
      .page-title__logo
      h2 #{item.subtitle}
      h1 #{item.title}

    .sp-program-adaptation-days-layout.br-lg-md
      if item.item_3_title || item.item_3_name || item.item_3_text
        ul.sp-program-adaptation-days.sp-program-adaptation-days--3-dots
          if item.item_1_title ||  item.item_1_name || item.item_1_text
            li(data-day='1').sp-program-adaptation-day.sp-program-adaptation-day--1.sp-program-adaptation-day--active
              p.sp-program-adaptation-day__text #{item.item_1_title}
              .sp-program-adaptation-day__dot
                .sp-program-adaptation-day__dot-center
                .circle.sp-program-adaptation-day__dot-circle
              .sp-program-adaptation-day__bg
                if item.item_1_image
                  .sp-program-adaptation-day__bg-img
                    img(src="#{item.item_1_image}")
                .circle.sp-program-adaptation-day__bg-circle.sp-program-adaptation-day__bg-circle--1
                .circle.sp-program-adaptation-day__bg-circle.sp-program-adaptation-day__bg-circle--2
                .circle.sp-program-adaptation-day__bg-circle.sp-program-adaptation-day__bg-circle--3
          if item.item_2_title ||  item.item_2_name || item.item_2_text
            li(data-day='2').sp-program-adaptation-day.sp-program-adaptation-day--2
              p.sp-program-adaptation-day__text #{item.item_2_title}
              .sp-program-adaptation-day__dot
                .sp-program-adaptation-day__dot-center
                .circle.sp-program-adaptation-day__dot-circle
              .sp-program-adaptation-day__bg
                if item.item_2_image
                  .sp-program-adaptation-day__bg-img
                    img(src="#{item.item_2_image}")
                .circle.sp-program-adaptation-day__bg-circle.sp-program-adaptation-day__bg-circle--1
                .circle.sp-program-adaptation-day__bg-circle.sp-program-adaptation-day__bg-circle--2
                .circle.sp-program-adaptation-day__bg-circle.sp-program-adaptation-day__bg-circle--3
          if item.item_3_title || item.item_3_name || item.item_3_text
            li(data-day='3').sp-program-adaptation-day.sp-program-adaptation-day--3
              p.sp-program-adaptation-day__text #{item.item_3_title}
              .sp-program-adaptation-day__dot
                .sp-program-adaptation-day__dot-center
                .circle.sp-program-adaptation-day__dot-circle
              .sp-program-adaptation-day__bg
                if item.item_3_image
                  .sp-program-adaptation-day__bg-img
                    img(src="#{item.item_3_image}")
                .circle.sp-program-adaptation-day__bg-circle.sp-program-adaptation-day__bg-circle--1
                .circle.sp-program-adaptation-day__bg-circle.sp-program-adaptation-day__bg-circle--2
                .circle.sp-program-adaptation-day__bg-circle.sp-program-adaptation-day__bg-circle--3
      else
        ul.sp-program-adaptation-days
          if item.item_1_title || item.item_1_name || item.item_1_text
            li(data-day='1').sp-program-adaptation-day.sp-program-adaptation-day--1.sp-program-adaptation-day--active
              p.sp-program-adaptation-day__text #{item.item_1_title}
              .sp-program-adaptation-day__dot
                .sp-program-adaptation-day__dot-center
                .circle.sp-program-adaptation-day__dot-circle
              .sp-program-adaptation-day__bg
                if item.item_1_image
                  .sp-program-adaptation-day__bg-img
                    img(src="#{item.item_1_image}")
                .circle.sp-program-adaptation-day__bg-circle.sp-program-adaptation-day__bg-circle--1
                .circle.sp-program-adaptation-day__bg-circle.sp-program-adaptation-day__bg-circle--2
                .circle.sp-program-adaptation-day__bg-circle.sp-program-adaptation-day__bg-circle--3
          if item.item_2_title || item.item_2_name || item.item_2_text
            li(data-day='2').sp-program-adaptation-day.sp-program-adaptation-day--2
              p.sp-program-adaptation-day__text #{item.item_2_title}
              .sp-program-adaptation-day__dot
                .sp-program-adaptation-day__dot-center
                .circle.sp-program-adaptation-day__dot-circle
              .sp-program-adaptation-day__bg
                if item.item_2_image
                  .sp-program-adaptation-day__bg-img
                    img(src="#{item.item_2_image}")
                .circle.sp-program-adaptation-day__bg-circle.sp-program-adaptation-day__bg-circle--1
                .circle.sp-program-adaptation-day__bg-circle.sp-program-adaptation-day__bg-circle--2
                .circle.sp-program-adaptation-day__bg-circle.sp-program-adaptation-day__bg-circle--3


      .sp-program-man-innovations-info-layout
        if item.item_1_name || item.item_1_text
          .sp-program-man-innovations-info.sp-program-man-innovations-info--1.sp-program-man-innovations-info--active
            if item.item_1_name
              h1 #{item.item_1_name}
            if item.item_1_text
              p #{item.item_1_text}
        if item.item_2_name || item.item_2_text
          .sp-program-man-innovations-info.sp-program-man-innovations-info--2
            if item.item_2_name
              h1 #{item.item_2_name}
            if item.item_2_text
              p #{item.item_2_text}
        if item.item_3_name || item.item_3_text
          .sp-program-man-innovations-info.sp-program-man-innovations-info--3
            if item.item_3_name
              h1 #{item.item_3_name}
            if item.item_3_text
              p #{item.item_3_text}

    ul.sp-program-info-mobile.br-sm
      if item.item_1_title || item.item_1_name || item.item_1_text
        li.sp-program-info__item.sp-program-info__item--1.sp-program-info__item--active
          .vertical-line.sp-program-info__item-line
          p.sp-program-info__item-month #{item.item_1_title}
          p.sp-program-info__item-text #{item.item_1_text}
      if item.item_2_title || item.item_2_name || item.item_2_text
        li.sp-program-info__item.sp-program-info__item--1.sp-program-info__item--active
          .vertical-line.sp-program-info__item-line
          p.sp-program-info__item-month #{item.item_2_title}
          p.sp-program-info__item-text #{item.item_2_text}
      if item.item_3_title || item.item_3_name || item.item_3_text
        li.sp-program-info__item.sp-program-info__item--1.sp-program-info__item--active
          .vertical-line.sp-program-info__item-line
          p.sp-program-info__item-month #{item.item_3_title}
          p.sp-program-info__item-text #{item.item_3_text}


  script.
    $(function(){
      $('.sp-program-adaptation-day').click(function(){
        if(!$(this).hasClass('sp-program-adaptation-day--active')){
          $('.sp-program-adaptation-day--active').removeClass('sp-program-adaptation-day--active');
          $(this).addClass('sp-program-adaptation-day--active');
          $('.sp-program-man-innovations-info').removeClass('sp-program-man-innovations-info--active');
          $('.sp-program-man-innovations-info--' + $(this).data('day')).addClass('sp-program-man-innovations-info--active');
        }
      });
    });